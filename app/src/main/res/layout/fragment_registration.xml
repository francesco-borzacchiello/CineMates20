<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.fragment.RegistrationFragment">

    <EditText
        android:id="@+id/nomeRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="24dp"
        android:autofillHints=""
        android:background="@drawable/round_rect_shape"
        android:ems="10"
        android:hint="@string/prompt_nome"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:selectAllOnFocus="true"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/cognomeRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_rect_shape"
        android:ems="10"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="24dp"
        android:autofillHints=""
        android:hint="@string/prompt_cognome"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:maxLength="15" />

    <EditText
        android:id="@+id/usernameRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_rect_shape"
        android:ems="10"
        android:layout_marginStart="24dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="24dp"
        android:autofillHints=""
        android:hint="@string/prompt_username"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:maxLength="15" />

    <EditText
        android:id="@+id/emailRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_rect_shape"
        android:ems="10"
        android:layout_marginStart="24dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="24dp"
        android:autofillHints=""
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:maxLength="320" />

    <EditText
        android:id="@+id/passwordRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_rect_shape"
        android:ems="10"
        android:layout_marginStart="24dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="24dp"
        android:autofillHints=""
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:maxLength="100" />

    <EditText
        android:id="@+id/confermaPasswordRegistrazione"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_rect_shape"
        android:ems="10"
        android:layout_marginStart="24dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="24dp"
        android:autofillHints=""
        android:hint="@string/prompt_conferma_password"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:maxLength="100" />

    <Button
        android:id="@+id/registratiButton"
        style="@style/MaterialButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_gravity="center"
        android:enabled="false"
        android:text="@string/action_sign_up"
        android:textColor="@color/white" />

</FrameLayout>