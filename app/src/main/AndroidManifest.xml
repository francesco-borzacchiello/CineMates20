<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unina.ingSw.cineMates20">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_launcher"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:uiOptions="splitActionBarWhenNarrow">

        <activity
            android:name=".view.activity.SearchMovieActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme">
        </activity>

        <activity
            android:name=".view.activity.ResetPasswordActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.activity.LoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".EntryPoint"
            android:screenOrientation="portrait"
            android:theme="@style/LauncherTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme" />

        <activity
            android:name=".view.activity.RegistrationActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
    </application>

</manifest>